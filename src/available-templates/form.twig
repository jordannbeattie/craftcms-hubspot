{% if craft.hubspot.isUseable() and form is defined and form is not null and form is not empty %}
	<script charset="utf-8" type="text/javascript" src="https://js.hsforms.net/forms/v2-legacy.js"></script>
	<script charset="utf-8" type="text/javascript" src="https://js.hsforms.net/forms/v2.js"></script>
	<script>
        hbspt.forms.create({
            portalId: "{{ craft.hubspot.getPortalId() }}",
            formId: "{{ form }}"
        });
	</script>
{% elseif not craft.hubspot.hasApiKey %}
	<script>console.log('There was an issue rendering the form. Check that your API Key has been set.')</script>
{% else %}
	<script>console.log('There was an issue rendering the form. Check that you have passed a correct form ID.')</script>
{% endif %}
